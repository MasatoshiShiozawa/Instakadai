<html>
  <head>
    <title>INSTASITE</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <div class="container">
    <header>
      <% flash.each do |key, value| %>
        <%= content_tag(:div, value, class: "#{key}") %>
      <% end %>
      <% if logged_in? %>
        <%= link_to "INSTASITE", blogs_path %>　　
        <%= link_to "みんなの写真一覧", blogs_path %>　　　
        <%= link_to "マイページ", user_path(current_user.id) %>　　　
        <%= link_to "ログアウト", session_path(current_user.id), method: :delete %>
      <% else %>
        <%= link_to "INSTASITE", new_user_path %>　　
        <%= link_to "みんなの写真一覧", blogs_path %>　　
        <%= link_to "Sign up", new_user_path %>　　　
        <%= link_to "ログイン", new_session_path %>
      <% end %>
      <%= yield %>
   </header>
   <footer class="footer">
     <p> © INSTASITE Corp. All RIGHTS RESERVED.</p>
   </footer>
 </div>
</html>
